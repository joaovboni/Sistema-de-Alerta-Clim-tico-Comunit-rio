<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<DialogPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.alertaclimatico.cliente.controllers.dialogs.CidadeDialogController">
    <content>
        <VBox spacing="10" minWidth="400">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <GridPane hgap="10" vgap="10">
                <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="campoNome" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Estado:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <ComboBox fx:id="comboEstado" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Latitude:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="campoLatitude" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Longitude:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="campoLongitude" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="População:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="campoPopulacao" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>

            <Label fx:id="mensagemErro" styleClass="erro-mensagem" visible="false"/>
        </VBox>
    </content>
</DialogPane>